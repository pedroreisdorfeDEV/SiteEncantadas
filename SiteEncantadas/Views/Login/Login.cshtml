@model SiteEncantadas.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<head>

    <link rel="stylesheet" href="~/css/style_Login.css" />
    <script src="~/js/PopUpDefault.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/css/popup.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<style>
    #botaoRevelaSenha {
        border: none;
        background-color: white;
    }
</style>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
@* mudei versão aqui do jquery *@

<div class="titulo">Login</div>
<div>
    <form asp-action="Logar" asp-controller="Login" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="divLogin">
            <div>
                <label asp-for="Login" class="labelLogin">
                    Login
                </label>
            </div>
            <div> <input class="inputLoginSenha" id="login" onblur="ajustaBorda()" name="Login" /></div>
            
           
        </div>
        <div class="divSenha">
            <div>
                <label label asp-for="Senha" class="labelLogin">
                    Senha
                </label>
            </div>
            <div>
                <input class="inputLoginSenha" id="senha" name="Senha" type="password"/>
                <button class="botaoMostrarSenha"  id="botaoRevelaSenha" onmouseover="mostrarSenha()"
                        onmouseout="ocultarSenha()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z" />
                        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0" />
                    </svg>
                </button>
              
            </div>
    
          
        </div>
        <button class="botaoLogar" type="submit" value="Logar">Logar</button>
    </form>
</div>


<script>
    function mostrarSenha() {
        var senhaInput = document.getElementById("senha");
        senhaInput.type = "text"; 
    }

    function ocultarSenha() {
        var senhaInput = document.getElementById("senha");
        senhaInput.type = "password"; 
    }
</script>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


